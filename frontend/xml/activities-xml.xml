<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE activities-upload [
  <!ELEMENT activities-upload (activities)>
  <!ATTLIST activities-upload operation (insert|update) "insert">
  <!ELEMENT activities (activity+)>
  <!ELEMENT activity (id?, name, capacity, duration, description?, trainers?, club_id)>
  <!ELEMENT id (#PCDATA)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT capacity (#PCDATA)>
  <!ELEMENT duration (#PCDATA)>
  <!ELEMENT description (#PCDATA)>
  <!ELEMENT trainers (trainer*)>
  <!ELEMENT trainer (#PCDATA)>
  <!ELEMENT club_id (#PCDATA)>
]>
<activities-upload operation="insert">
  <activities>
    <activity>
      <name>ballet</name>
      <capacity>10</capacity>
      <duration>30</duration>
      <description>A low-impact workout combining ballet, Pilates, and yoga.</description>
      <trainers>
        <trainer>5</trainer>
      </trainers>
      <club_id>2</club_id>
    </activity>
  </activities>
</activities-upload>
